{
  "expo": {
    "name": "عبادت",
    "slug": "NamazAfghanistan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ebadat",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "extra": {
      "supportsRTL": true,
      "router": {},
      "eas": {
        "projectId": "d82ba8c7-721e-471b-92c7-ca216e32f86c"
      }
    },
    "locales": {
      "fa": "./locales/fa.json",
      "ps": "./locales/ps.json"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.afghandev.namaz",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "location",
          "fetch"
        ],
        "CFBundleAllowMixedLocalizations": true,
        "CFBundleDevelopmentRegion": "fa",
        "CFBundleLocalizations": [
          "fa",
          "ps",
          "ar"
        ],
        "NSLocationWhenInUseUsageDescription": "برای محاسبه اوقات نماز و جهت قبله به موقعیت شما نیاز داریم",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "برای یادآوری نماز به موقعیت شما نیاز داریم",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "buildNumber": "1"
    },
    "android": {
      "package": "com.afghandev.namaz",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#1a4d3e",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.WAKE_LOCK"
      ],
      "blockedPermissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a4d3e",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "برای یادآوری نماز به موقعیت شما نیاز داریم",
          "locationWhenInUsePermission": "برای محاسبه اوقات نماز و جهت قبله به موقعیت شما نیاز داریم"
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": [
            "./assets/audio/adhan/fajr_adhan.mp3",
            "./assets/audio/adhan/barakatullah_salim.mp3"
          ]
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "برای قطب‌نمای قبله به حسگرهای دستگاه نیاز داریم"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "description": "اپلیکیشن جامع عبادت - قرآن کریم کامل با ترجمه دری و پشتو، اوقات نماز حنفی، قبله نما، اذکار روزانه",
    "githubUrl": "https://github.com/afghandev/ebadat",
    "primaryColor": "#1a4d3e"
  }
}
